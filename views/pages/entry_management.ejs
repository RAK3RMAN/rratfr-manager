<% include ../partials/head.ejs %>
<% include ../partials/wrapper-top.ejs %>
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <div class="card card-stats">
                    <div class="card-header card-header-info card-header-icon">
                        <div class="card-icon">
                            <i class="far fa-copy"></i>
                        </div>
                        <p class="card-category"><strong>Total Entries</strong></p>
                        <h3 class="card-title"><span id="totalStat">0</span></h3>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">history</i>
                            <span id="pushedDate1">Updated just now</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="card card-stats" onclick="createEntry()">
                    <div class="card-header card-header-success card-header-icon">
                        <div class="card-icon">
                            <i class="fas fa-plus"></i>
                        </div>
                        <p class="card-category"><strong>Entry Management</strong></p>
                        <h3 class="card-title">Create Entry</h3>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">info</i>
                            Click or tap on this element to create a new entry
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header card-header-tabs card-header-success">
                        <div class="nav-tabs-navigation">
                            <div class="nav-tabs-wrapper">
                                <span class="nav-tabs-title p-0">
                                    <h4 class="card-title"><strong>All Entries</strong></h4>
                                    <p class="card-category">View, edit, and delete entries in the table below</p>
                                </span>
                                <ul class="nav nav-tabs justify-content-end" data-tabs="tabs">
                                    <li class="nav-item dropdown mr-2">
                                        <a class="nav-link active" onclick="sortEntries()">
                                            <i class="fas fa-sort-numeric-up"></i>
                                            <div class="ripple-container"></div>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive" id="lightgallery">
                            <table class="table table-hover table-striped dt-responsive display nowrap"
                                   id="entryTable" style="width: 100%">
                                <thead class="text-muted">
                                <th>Bib #</th>
                                <th>Name</th>
                                <th>Category</th>
                                <th>PC Votes</th>
                                <th>Timing Status</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Final Time</th>
                                <th>Final Place</th>
                                <th>Tools</th>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../partials/wrapper-bottom.ejs %>
<% include ../partials/footer.ejs %>
<script type="text/javascript" src="/static/js/rratfr-js/entry_managementFunct.js"></script>
<script>
    document.ready = function () {
        activateLink("<%= title %>");
    }
</script>